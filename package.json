{
    "name": "pixi-code",
    "displayName": "pixi-code",
    "description": "Pixi VSCode integration",
    "license": "MIT",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.102.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:python",
        "workspaceContains:**/pixi.toml",
        "workspaceContains:**/pyproject.toml"
    ],
    "publisher": "renan-r-santos",
    "extensionDependencies": [
        "ms-python.vscode-python-envs"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "title": "Pixi",
            "properties": {
                "pixi-code.pixiExecutable": {
                    "type": "string",
                    "default": "pixi",
                    "description": "Path to the Pixi executable. Leave empty to use auto-discovery.",
                    "scope": "machine-overridable"
                }
            }
        },
        "icons": {
            "prefix-dev": {
                "description": "Prefix Logo",
                "default": {
                    "fontPath": "./assets/prefix-dev.woff",
                    "fontCharacter": "\\E800"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/node": "20.x",
        "@types/vscode": "^1.102.0",
        "@types/which": "^3.0.4",
        "@typescript-eslint/eslint-plugin": "^8.31.1",
        "@typescript-eslint/parser": "^8.31.1",
        "eslint": "^9.25.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-unused-imports": "^4.1.4",
        "prettier": "^3.4.2",
        "ts-loader": "^9.5.2",
        "typescript": "^5.8.3",
        "webpack": "^5.99.7",
        "webpack-cli": "^6.0.1"
    },
    "dependencies": {
        "which": "^5.0.0"
    }
}
