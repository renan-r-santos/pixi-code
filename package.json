{
    "name": "pixi-code",
    "displayName": "Pixi Code",
    "description": "Pixi support for the Python Environments extension",
    "icon": "assets/icon.png",
    "license": "MIT",
    "version": "0.1.5",
    "homepage": "https://github.com/renan-r-santos/pixi-code",
    "repository": {
        "type": "git",
        "url": "https://github.com/renan-r-santos/pixi-code"
    },
    "bugs": {
        "url": "https://github.com/renan-r-santos/pixi-code/issues"
    },
    "keywords": [
        "pixi",
        "vscode",
        "python",
        "conda"
    ],
    "engines": {
        "vscode": "^1.103.0"
    },
    "categories": [
        "Data Science",
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:python",
        "workspaceContains:**/pixi.toml",
        "workspaceContains:**/pyproject.toml"
    ],
    "publisher": "renan-r-santos",
    "extensionDependencies": [
        "ms-python.vscode-python-envs"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "title": "Pixi",
            "properties": {
                "pixi-code.pixiExecutable": {
                    "type": "string",
                    "default": "pixi",
                    "description": "Path to the Pixi executable. Leave empty to use auto-discovery.",
                    "scope": "machine-overridable"
                }
            }
        },
        "icons": {
            "prefix-dev": {
                "description": "Prefix Logo",
                "default": {
                    "fontPath": "./assets/prefix-dev.woff",
                    "fontCharacter": "\\E800"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src",
        "format": "prettier --write .",
        "format:check": "prettier --check ."
    },
    "devDependencies": {
        "@types/node": "24.x",
        "@types/vscode": "^1.103.0",
        "@types/which": "^3.0.4",
        "@typescript-eslint/eslint-plugin": "^8.40.0",
        "@typescript-eslint/parser": "^8.40.0",
        "eslint": "^9.34.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-unused-imports": "^4.2.0",
        "prettier": "^3.6.2",
        "ts-loader": "^9.5.4",
        "typescript": "^5.9.2",
        "webpack": "^5.101.3",
        "webpack-cli": "^6.0.1"
    },
    "dependencies": {
        "@types/semver": "^7.7.1",
        "semver": "^7.7.2",
        "which": "^5.0.0"
    }
}
